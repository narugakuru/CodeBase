<view>
  <navbar title="分享-{{theme_id=='-1'?'生活':themeMessage[theme_id-1].themeTitle}}" loading="{{true}}" home="{{true}}" back="{{true}}"></navbar>
</view>
<form bindsubmit="formSubmit">
