{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++.exe build active file",
      "command": "E:/Environment/mingw64/bin/g++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        // "${fileDirname}\\exe\\${fileBasenameNoExtension}.exe"
        "E:/Code/VSCode_C/exe/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "E:/Environment/mingw64/bin"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe 生成活动文件",
      "command": "E:/Environment/mingw64/bin/g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        // "${fileDirname}\\exe\\${fileBasenameNoExtension}.exe"
        "E:/Code/VSCode_C/exe/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "E:/Environment/mingw64/bin"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "调试器生成的任务。"
    }
  ]
}
